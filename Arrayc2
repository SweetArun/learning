#include<stdio.h>
#include<conio.h>
int main()
{
	int n;
	printf("enter the number of students ");
	scanf("%d",&n);
	int a[n],i;
	float sum=0;
	float avg;
	for(i=0;i<n;i++)
	{
		printf("\n enter the mark of student %d",i);
		scanf("%d",&a[i]);
		sum=sum+a[i];
	}
	avg=sum/i;
	printf("\n sum=%f" ,sum);
	printf("\n avg= %f",avg);
}
