// transpose of matrix - 2d arrays //
#include<stdio.h>
int main()
{
	int i,j,r,c;
	printf("enter the rows and columns of the matrix \n");
	scanf("%d%d",&r,&c);
	printf("enter the elements of the matrix\n");
	int a[r][c];
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("\n entered matrix \n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("%d \t",a[i][j]);
		}
		printf("\n");
	}
	printf("transposed matrix \n");
	for(i=0;i<c;i++)
	{
		for(j=0;j<r;j++)
		{
			printf("%d\t",a[j][i]);
		}
		printf("\n");
	}
}
			
